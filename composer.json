{
  "name": "crazy-goat/micro-app",
  "description": "A lightweight micro PHP application framework",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Piotr Halas",
      "email": "halaspiotr@gmail.com"
    }
  ],
  "keywords": ["micro", "framework", "php", "lightweight", "workerman"],
  "homepage": "https://github.com/crazy-goat/micro-app",
  "support": {
    "issues": "https://github.com/crazy-goat/micro-app/issues",
    "source": "https://github.com/crazy-goat/micro-app"
  },
  "require": {
    "php": "^8.1",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "symfony/console": "^7.0",
    "nikic/fast-route": "^1.3",
    "workerman/workerman": "^5.1"
  },
  "autoload": {
    "psr-4": {
      "CrazyGoat\\MicroApp\\": "src"
    }
  },
  "require-dev": {
    "php-cs-fixer/shim": "^3.85",
    "rector/rector": "^2.1",
    "workerman/globaldata": "^1.0"
  },
  "scripts": {
    "lint-fix": [
      "vendor/bin/php-cs-fixer fix -v",
      "vendor/bin/rector process"
    ],
    "lint": [
      "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix -v --dry-run",
      "vendor/bin/phpstan",
      "vendor/bin/rector process --dry-run"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
